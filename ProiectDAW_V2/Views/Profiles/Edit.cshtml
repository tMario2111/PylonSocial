@model ProiectDAW_V2.Models.Profile

<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center mt-5">Edit profile</h2>
        <hr/>
        <form enctype="multipart/form-data" method="post" asp-action="Edit" asp-controller="Profiles">
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" autocomplete="First name" aria-required="true" placeholder="First name"/>
                <label asp-for="FirstName">First name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" autocomplete="Last name" aria-required="true" placeholder="Last name"/>
                <label asp-for="LastName">Last name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" autocomplete="Description" aria-required="true" placeholder="Description"/>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProfilePicture">Change profile picture (leave empty to keep current picture)</label>
                <input asp-for="ProfilePicture" class="form-control" type="file"/>
            </div>

            <div class="form-group mb-3">
                @Html.CheckBoxFor(m => m.DeleteProfilePicture)
                <label asp-for="DeleteProfilePicture" class="form-check-label">Delete current profile picture and keep the default one</label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Visibility">Visibility</label>

                <select asp-for="Visibility" class="form-control">
                    @foreach (var i in Enum.GetValues(typeof(Profile.VisibilityType)))
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div class="d-flex flex-row justify-content-center gap-2">
                <button class="w-50 btn btn-danger btn-lg" asp-controller="Profiles" asp-action="Show">Cancel</button>
                <button type="submit" class="w-50 btn btn-lg btn-primary">Edit profile</button>
            </div>
        </form>
    </div>
</div>